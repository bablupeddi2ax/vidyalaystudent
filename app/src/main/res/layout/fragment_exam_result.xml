<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.examresult.ExamResultFragment">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <androidx.cardview.widget.CardView
         android:id="@+id/topCard"

         android:backgroundTint="#FFF"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         >

         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:padding="5dp">

             <de.hdodenhof.circleimageview.CircleImageView
                 android:id="@+id/circleProfile"
                 android:layout_width="100dp"
                 android:layout_height="100dp"

                 android:layout_marginTop="70dp"
                 android:src="@drawable/img_2"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHorizontal_bias="0.501"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent" />

             <TextView
                 android:id="@+id/txtName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="124dp"
                 android:layout_marginTop="16dp"
                 android:text="Anuj Pandey"
                 android:textColor="#0889EF"
                 android:textSize="24sp"
                 android:textStyle="bold|normal"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/circleProfile" />

             <androidx.cardview.widget.CardView
                 app:cardCornerRadius="20dp"
                 android:layout_marginTop="40dp"
                 android:layout_marginStart="20dp"
                 android:layout_marginEnd="20dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:backgroundTint="#43A5F3"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/txtName">

                 <LinearLayout
                    android:layout_marginStart="20dp"
                     android:paddingTop="9dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <LinearLayout

                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="8dp"
                         >

                         <TextView
                             android:id="@+id/textRegistartionText"
                             android:layout_width="0dp"
                             android:layout_marginEnd="20dp"
                             android:layout_weight="1"
                             android:layout_height="wrap_content"
                             android:text="Registration/ID"
                             android:textColor="#fff"
                             android:textSize="17sp"
                            />

                         <TextView
                             android:id="@+id/txtRegistrationId"
                             android:width="0dp"
                             android:layout_weight="1"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="29835433"
                             android:textColor="#fff"
                             android:textSize="17sp"
                          />
                     </LinearLayout>
                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_marginBottom="8dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:id="@+id/txtClassText"
                             android:layout_width="0dp"
                             android:layout_marginEnd="20dp"
                             android:layout_weight="1"
                             android:layout_height="wrap_content"
                             android:text="Class"
                             android:textColor="#fff"
                             android:textSize="17sp"

                             />
                         <TextView
                             android:id="@+id/txtClass"
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:text="10"
                             android:textColor="#fff"
                             android:textSize="17sp"
                             android:width="0dp"
                             android:layout_weight="1"
                             />
                     </LinearLayout>
                     <LinearLayout
                         android:layout_marginBottom="8dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:id="@+id/txtExamCountsText"
                             android:layout_height="wrap_content"
                             android:text="Exam Counts"
                             android:layout_width="0dp"
                             android:layout_marginEnd="20dp"
                             android:layout_weight="1"
                             android:textColor="#fff"
                             android:textSize="17sp"
                           />

                         <TextView
                             android:id="@+id/txtExamCounts"
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:text="0"
                             android:layout_weight="1"
                             android:textColor="#fff"
                             android:textSize="17sp"
                             />
                     </LinearLayout>
                     <LinearLayout
                         android:layout_marginBottom="8dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:id="@+id/txtTotalMarksText"
                             android:layout_height="wrap_content"
                             android:text="Registration/ID"
                             android:layout_width="0dp"
                             android:layout_marginEnd="20dp"
                             android:layout_weight="1"
                             android:textColor="#fff"
                             android:textSize="17sp"
                             app:layout_constraintStart_toStartOf="parent"
                             app:layout_constraintTop_toTopOf="parent"
                             />
                         <TextView
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:text="35"
                             android:layout_weight="1"
                             android:textColor="#fff"
                             android:textSize="17sp"
                             />
                     </LinearLayout>
                     <LinearLayout
                         android:layout_marginBottom="8dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_height="wrap_content"
                             android:text="Obtained Marks"
                             android:layout_width="0dp"
                             android:layout_marginEnd="20dp"
                             android:layout_weight="1"
                             android:textColor="#fff"
                             android:textSize="17sp" />
                         <TextView
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:text="35"
                             android:layout_weight="1"
                             android:textColor="#fff"
                             android:textSize="17sp" />
                     </LinearLayout>
                     <LinearLayout
                         android:layout_marginBottom="8dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_height="wrap_content"
                             android:text="Percentage"
                             android:layout_width="0dp"
                             android:layout_marginEnd="20dp"
                             android:layout_weight="1"
                             android:textColor="#fff"
                             android:textSize="17sp" />
                         <TextView
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:text="84%"
                             android:layout_weight="1"
                             android:textColor="#fff"
                             android:textSize="17sp" />
                     </LinearLayout>
                 </LinearLayout>
             </androidx.cardview.widget.CardView>

         </androidx.constraintlayout.widget.ConstraintLayout>
     </androidx.cardview.widget.CardView>


 </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>
</layout>